@model CreateCommentViewModel

@{
    ViewData["Title"] = "CreateComment";
}

<h2>CreateComment</h2>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComment" method="post">
            <div class="form-group">
                <label asp-for="Comment.Description" class="control-label"></label>
                <input asp-for="Comment.Description" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create"  class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

