@model MyCommentsViewModel
@{
    ViewData["Title"] = "MyComments";
}

<h2 style="margin-bottom:25px">MyComments</h2>
<hr />
@if (Model.Comments.Count() == 0)
{
    <div class="alert alert-secondary">
        You have not made comments on any products yet!
    </div>
}
else
{
    foreach (var c in Model.Comments)
    {
        <div>
            <strong>@c.UserName</strong>
        </div>
        <div>
            @c.Description
        </div>
        <span style="margin-right:4px;">
            @c.WrittenDate
        </span>
        <span style="border:solid; border-width:1px;">
            👍 @c.numThumbsUp
        </span>
        <span style="border:solid; border-width:1px; margin-right:5px;">
            👎 @c.numThumbsDown
        </span>
        <span>
            <a href='@Url.Action("DeleteComments", "home", new { id = c.Id })'>
                Delete
            </a>
        </span>
        <span style="float:right;">
            @foreach (var product in Model.Products)
            {
                if (product.Id == c.productId)
                {
                    <a href='@Url.Action("Details", "Product", new {id = product.Id})'>
                        <img src="@product.ImageURL" style="width:65px; height:90px;" />
                    </a>
                }
            }
        </span>
        <div style="margin-top:15px"></div>
        <hr style="" />
    }
}
