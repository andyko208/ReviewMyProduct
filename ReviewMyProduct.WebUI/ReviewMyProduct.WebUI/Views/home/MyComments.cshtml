@model ICollection<Comment>
@{
    ViewData["Title"] = "MyComments";
}

<h2>MyComments</h2>
@if (Model.Count() == 0)
{
    <div class="alert alert-secondary">
        You have not made comments on any products yet!
    </div>
}
else
{
    foreach (var c in Model)
    {
        <div>
            <strong>@c.UserName</strong>
        </div>
        <div>
            @c.Description
        </div>
        <span style="margin-right:4px;">
            @c.WrittenDate
        </span>
        <span style="border:solid; border-width:1px;">
            👍 @c.numThumbsUp
        </span>
        <span style="border:solid; border-width:1px; margin-right:5px;">
            👎 @c.numThumbsDown
        </span>
        <span>
            @*image url for the product that user wrote comment on*@
        </span>
        <a href='@Url.Action("DeleteComments", "home", new { id = c.Id })'>
            Delete
        </a>
        <div style="margin-top:15px"></div>
        <hr style="" />
    }
}
