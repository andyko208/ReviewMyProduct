@model CreateProductViewModel

<h2>Create</h2>

<form asp-action="create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input class="form-control" asp-for="Product.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Type"></label>
        <input class="form-control" asp-for="Product.Type" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <input class="form-control" asp-for="Product.Description" />
    </div>
    <div class="form-group">
        <label asp-for="Product.ShopURL"></label>
        <input class="form-control" asp-for="Product.ShopURL" />
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input type="file" accept=".jpg" class="form-control-file" asp-for="Image" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>